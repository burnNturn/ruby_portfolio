<div class='chart-container container-fluid'  id='security-chart'>
    <canvas id='securityChart'></canvas>
    <script>
        var prices = [];
        var xPoints = [];
        var point = 0;
        <% @prices.each do |price| %>
            prices.push(<%= price['close'] %>)
            xPoints.push(point);
            point += 1;
        <% end %>
        Chart.defaults.global.legend.display = false;
        var ctx = document.getElementById('securityChart').getContext('2d');
        var securityChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: xPoints,
                datasets: [{
                    data: prices,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.0)',
                    ],
                    borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:false
                        }
                    }],
                    xAxes: [{
                        display: false
                    }]
                },
                elements: {
                    point: {
                        radius: 0
                    }
                },
                legend: {
                    labels: {
                        display: false
                    }
                }
            }
        });
    </script>
</div>