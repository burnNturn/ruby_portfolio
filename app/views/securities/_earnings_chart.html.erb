<div class='chart-container container-fluid'  id='earnings-chart'>
    <canvas id='epsChart'></canvas>
    <script>
        var epsDates = []
        var epsValues = []
        <% @basic_eps.each do |eps| %>
            var dateInMill = <%= ((eps['date']).to_time).to_i * 1000 %>;
            var jsDate = new Date(dateInMill)
            epsDates.push(jsDate.getMonth() + '/' +jsDate.getFullYear());
            epsValues.push(<%= eps['value'] %>)
        <% end %>
        Chart.defaults.global.legend.display = false;
        var ctx = document.getElementById('epsChart').getContext('2d');
        var epsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: epsDates,
                datasets: [{
                    data: epsValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.0)',
                    ],
                    borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                },
                legend: {
                    labels: {
                        display: false
                    }
                }
            }
        });
    </script>
</div>